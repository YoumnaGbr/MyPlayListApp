                        <th>Name</th>
                        <th>Song Name</th>
                        <th>Song Type</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var songs in Model.songs)
                    {
                        <tr>

                            <td>
                                <img src="~/images/@songs.SingerImage" width="75" class="img-fluid rounded-circle">
                            </td>
                        <td>
