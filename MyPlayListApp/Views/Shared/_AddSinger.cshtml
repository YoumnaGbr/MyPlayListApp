@model MyPlayListApp.Data.ViewModels.SingerDetailes


<div class="modal fade" id="addSingerModal" tabindex="-1" aria-labelledby="addSingerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addSingerModalLabel">Add New Singer</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-controller="Home" asp-action="AddNewSinger" enctype="multipart/form-data">
                    <div class="form-group">
                        <label class="col-form-label">Singer Image</label>
                        <br />
                        <input type="file" class="form-control-file" name="ImageFile" required />
                    </div>

                    <div class="form-group">
                        <label class="col-form-label">Name</label>
                        <input name="Name" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label class="col-form-label">Date of Birth</label>
                        <input name="DateOfBirth" type="date" class="form-control" required max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    </div>

                    <br />
                    <button type="submit" class="btn btn-primary">Add</button>
                </form>
            </div>
        </div>
    </div>
</div>