@model MyPlayListApp.Data.ViewModels.CategoryDTO

<div class="modal fade" id="addCategoryModal" tabindex="-1" aria-labelledby="addCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCategoryModalLabel">Add New Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                    <div class="form-group">
                        <label class="col-form-label">Name</label>
                        <input id="CategoryName" class="form-control" required />
                    </div>
                    <br />
                    <button type="button" onclick="AddCategory()" class="btn btn-primary">Add</button>
            </div>
        </div>
    </div>
</div>

<script>
    function AddCategory() {
        const categoryName = $("#CategoryName").val();

        $.ajax({
            type: "POST",
            dataType: 'json',
            url: '@Url.Action("AddNewCategory", "Home")',
            data:  { CategoryName: categoryName },
            success: function (e) {
                alert(e.message);
                window.location.reload();
            },
            error: function (e) {
                alert(e.message);
            }
        });
    }
</script>
